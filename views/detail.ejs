<h1><%= title %></h1>
<img src="<%= details.Poster %>">
<ul>
    <% for (const [key, value] of Object.entries(details)){ %>
        <% if (key !== "Poster" && key !== "Response") { %> 
            <li><%= key %>: <%= value %></li>
        <% } %> 
    <% } %>
</ul>
<form method="POST" action="/faves">
    <input type="hidden" name="title" value="<%= details.Title %>">
    <input type="hidden" name="imdbid" value="<%= details.imdbID %>">
    <input type="submit" value="Save as Fave">
</form>