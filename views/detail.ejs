<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>

<h1><%= title %></h1>
<img src="<%= details.Poster %>" class="posterdetails" />
<p><%= rating %>/10</p>
<div class="details">
  <ul>
    <% for (const [x, y] of Object.entries(details)){ %>
    <li>
      <% if (x !== "Poster" && y !=="Ratings" && x!== "Response"){ %>
      <span class="key"><%= x %>: </span><span class="value"><%= y %></span>
      <% } %>
    </li>
    <%}; %>
  </ul>
</div>