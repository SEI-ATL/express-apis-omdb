<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>

<h1><%= movie.Title %></h1>

<img src="<%= movie.Poster %> " alt="<%= movie.Title %> ">
<h3>Directed by: <%= movie.Director %></h3>
<h5>Plot: <%= movie.Plot %>
<h5>Release Date: <%= movie.Released %></h5>
<h5>Rated: <%= movie.Rated %></h5>
<h5>Genre: <%= movie.Genre %></h5>
<h5>Language: <%= movie.Language %></h5>   
<h5>Runtime: <%= movie.Runtime %></h5>
<form action="/faves" method="POST">
    <input type="hidden" name="title" value="<%= movie.Title %>">
    <input type="hidden" name="imdbid" value="<%= movie.imdbID %>">
    <input type="submit" value="Add to faves">
</form>