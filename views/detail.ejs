
<div class="fave">
  <form method="POST" action="/">
    <input id="title" type="hidden" name="title" value="<%= details.Title %>" />
    <input
      id="imdbid"
      type="hidden"
      name="imdbid"
      value="<%= details.imdbID %>"
    />
    <input id="faveinput" type="submit" value="Add to Faves" />
  </form>
</div>


<img src="<%= details.Poster %>" class="posterdetails" />

<p><%= rating %>/10</p>
<div class="details">
  <ul>
    <% for (const [k, v] of Object.entries(details)){ %>
    <li>
      <% if (k !== "Poster" && k !=="Ratings" && k!== "Response"){ %>
      <span class="key"><%= k %>: </span><span class="value"><%= v %></span>
      <% } %>
    </li>
    <%}; %>
  </ul>
</div>
