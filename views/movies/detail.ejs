<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>
<h1><%= details.Title %></h1>
<img src="<%= details.Poster %>" alt="<%= details.Title %> Poster">
<form action="/" method="POST">
    <input type="hidden" name="title" value="<%= details.Title %>">
    <input type="hidden" name="imdbId" value="<%= details.imdbID %>">
    <input type="submit" value="Add to Favorites">
</form>
<ul>
    <% for (let key in details) { %>
        <li>
            <%= key %>: <%= details[key] %>
        </li>
    <% } %>
</ul>
